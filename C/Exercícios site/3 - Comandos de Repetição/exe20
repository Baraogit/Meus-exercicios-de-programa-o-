#include <stdio.h>

int main(){
    int  cont = 0, contOdd = 0, number = 0;


    while (number != 1000){
        printf("Type an integer: ");
        scanf("%d",&number);
        if (number % 2 == 0){
            printf("%d is an odd number\n", number);
            contOdd++;
        }
        cont++;
    }
    printf("Amounts of data read: %d\n", cont++);
    printf("Amounts of odd numbers read: %d\n", contOdd);

    return 0;
}

