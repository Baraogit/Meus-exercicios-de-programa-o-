#include <stdio.h>


int main(){
    int i, numeroDeLancamentos, d1 = 0, d2 = 0;

    printf("Informe o numero de lancamentos dos dados: ");
    scanf("%d", &numeroDeLancamentos);

    srand(time(NULL));

    for(i = 0; i < numeroDeLancamentos; i++){
        d1 = rand() % 6+1; // um modo de imprimir algarismos aleatórios no intervalo de 1 à 6, sem que saia o algarismo zero, é somando 6+1
        d2 = rand() % 6+1;
        if (d1 > d2)
            printf("Dado um %d > %d dado dois\n", d1, d2);
        else
            if (d1 < d2)
                printf("Dado um %d < %d dado dois\n", d1, d2);
            else
                if (d1 == d2)
                     printf("Dado um %d = %d dado dois\n", d1, d2);
    }

// Para imprimir 6 algarismos no intervalo de: 1 - 6, acrescentasse +1 (% 6+1)
// Isso faz com quem se perca o primeiro algarismo (algarismo "0") e ganhe mais um (algarismo "6")
// É como estivéssemos deslocando bits. 

    
