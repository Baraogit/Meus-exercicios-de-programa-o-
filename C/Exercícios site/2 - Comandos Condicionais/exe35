#include <stdio.h>

int main()
{
     int dia, mes, ano;

    printf("Digite uma data usando inteiros:\n");
    scanf("%d %d %d", &dia, &mes, &ano);

    printf("%d/%d/%d\n", dia, mes, ano);

    if ((dia >= 1 && dia <= 31) && (mes == 1 || mes == 3 || mes == 5 || mes == 7 || mes == 8) || mes == 10 || mes == 12 )
         printf("Data valida");
    else
        if ((dia >= 1 && dia <= 30) && (mes == 4 || mes == 6 || mes == 9 || mes == 11))
            printf("Data valida");
        else
            if ((dia >= 1 && dia <= 29) && (mes == 2) && (ano % 4 == 0) && !(ano % 100 == 0))
                 printf("Data valida");
            else
                if ((dia >= 1 && dia <= 28) && (mes ==2))
                     printf("Data valida");

    return 0;
}
