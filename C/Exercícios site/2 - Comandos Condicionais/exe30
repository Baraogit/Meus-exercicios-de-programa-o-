#include <stdio.h>

int main()
{
    short int numero1, numero2, numero3;
    
    printf("Digite 3  numeros: ");
    scanf("%d %d %d", &numero1, &numero2, &numero3);
    
    if (numero1 <= numero2 && numero2 <= numero3)
        printf("Em ordem crescente: %d %d %d", numero1, numero2, numero3);
    else 
        if (numero1 <= numero3 && numero3 <= numero2)
            printf("Em ordem crescente: %d %d %d", numero1, numero3, numero2);
    
    if (numero2 <= numero1 && numero1 <= numero3)
        printf("Em ordem crescente: %d %d %d", numero2, numero1, numero3);
    else
        if (numero2 <= numero3 && numero3 <= numero1)
            printf("Em ordem crescente: %d %d %d", numero2, numero3, numero1);
                   
    if (numero3 <= numero1 && numero1 <= numero2)
        printf("Em ordem crescente: %d %d %d", numero3, numero1, numero2);
    else
        if( numero3 <= numero2 && numero2 <= numero1)
            printf("Em ordem crescente: %d %d %d", numero3, numero2, numero1);
            
            
    return 0;
}
