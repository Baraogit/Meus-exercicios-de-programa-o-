1) Escreva uma função recursiva que calcule a soma dos primeiros n cubos:
S = 1(3) + 2(3) + ... + n3

#include <stdio.h>

int somarNcubos(int n){
    int devolveResultado;
    
    if (n == 1)
       return 1; 
    else
       return n * n * n  + somarNcubos(n - 1);
}


int main(){
    int limiteNcubos, resultadoDaRecursao ; 
    printf("Digite o limite do calculo da soma de n cubos: ");
    scanf("%d", &limiteNcubos);
    
    resultadoDaRecursao = somarNcubos(limiteNcubos);
    
    printf("%d", resultadoDaRecursao); 
    
    return 0;
}
---------------------------------------------------------------------------
Algoritimo mais enxuto.
#include <stdio.h>

int somarNcubos(int n){
    if (n == 1)
       return 1; 
    else
       return n * n * n  + somarNcubos(n - 1);
}

int main(){
    int limiteNcubos; 
    printf("Digite o limite do calculo da soma de n cubos: ");
    scanf("%d", &limiteNcubos);
    
    printf("%d", somarNcubos(limiteNcubos)); 
    
    return 0;
}
--------------------------------------------------------------------------
Outro jeito de resolver, copiado de https://github.com/misaelrezende/Exercicios-do-Livro-Linguagem-C-Completa-e-Descomplicada/blob/master/Capitulo%209/9.4.3/ex01.c
#include <stdio.h>
#include <math.h>

float somarNcubos(int n){
    float devolveResultado, cubosN;
    
    if (n == 1)
       return pow(n, 3); 
    else
       cubosN = pow(n, 3);
       devolveResultado =  cubosN  + somarNcubos(n - 1);
       return devolveResultado;
}

int main(){
    int limiteNcubos;  
    float resultadoDaRecursao ; 
    printf("Digite o limite do calculo da soma de n cubos: ");
    scanf("%d", &limiteNcubos);
    
    resultadoDaRecursao = somarNcubos(limiteNcubos);
    
    printf("%f", resultadoDaRecursao); 

    return 0;
}

