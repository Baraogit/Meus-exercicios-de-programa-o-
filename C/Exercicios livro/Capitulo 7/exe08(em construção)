Minhas outras tentativas. 
// Entendi que os caracteres da segunda string devem estar na primeira. 
//xib está contido em abacaxi. 

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(){
    char palavra1[50], palavra2[50];
    int i, j, cont = 0;

    printf("Digite duas strings: ");
    gets(palavra1);
    gets(palavra2);

    if (strlen(palavra2) <= strlen(palavra1)){// palavra2 tem que ser menor ou igual a palavra1
        for (i = 0; i < strlen(palavra1); i++){
            for (j = 0; j < strlen(palavra2); j++){
                if (palavra1[i] == palavra2[j]){
                    cont++;
                    break;
                }
            }
        }
    }
    printf("Valor de cont = %d\n", cont);
    printf("Valor de palavra2 = %d\n", strlen(palavra2));

    if (strlen(palavra2) <= cont)// se cont tiver o valor igual ao tamanho da palavra2
        printf("Esta contido");
    else
        printf("Nao esta contido");

    return 0;
}
-----------------------------------------
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main(){
    char palavra1[50], palavra2[50], aux[50];
    int i, j, k = 0;

    printf("Digite a primeira string: ");
    gets(palavra1);
    printf("Digite a segunda string: ");
    gets(palavra2);

    if (strlen(palavra2) <= strlen(palavra1)){
        for(i = 0; i < strlen(palavra1); i++){
            for(j = 0; j < strlen(palavra2); j++){
                if (palavra1[i] == palavra2[j]){
                    aux[k] = palavra1[i];
                    k++;
                    break;
                }
            }
        }
    }
    aux[k] = '\0';
    printf("aux = %s\n", aux);
    if (strcmp(palavra2, aux) == 0)
        printf("%s contem em %s\n", palavra2, palavra1);
    else
        printf("Nao contem\n");
    return 0;
}



