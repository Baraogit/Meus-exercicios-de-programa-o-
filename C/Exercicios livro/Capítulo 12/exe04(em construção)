4) Elabore um programa no qual o usuário informe o nome de um arquivo texto e
uma palavra, e o programa informe o número de vezes que aquela palavra aparece
dentro do arquivo.

// se a palavra terminar com ponto, vírgula ou qualquer outro sinal, ela não fará parte da contagem.

#include <stdlib.h>
#include <stdio.h>
#include <string.h>

int main(){
  char nome_arquivo[50];
  printf("Digite o nome do arquivo: ");
  scanf("%s", nome_arquivo);
  FILE *arquivo = fopen(nome_arquivo, "r");// arquivo_para_leitura.txt
  if (arquivo == NULL){
    perror("Erro na abertura: ");
    exit(1);
  }

  int contadora_de_string = 0;
  char palavra[50], string_arquivo[50];

  printf("Digite uma string: ");
  scanf("%s", palavra);

 while(1){
   fscanf(arquivo, "%s", string_arquivo);

   if (feof(arquivo))
     break;

   if (strcmp(string_arquivo, palavra) == 0)
       contadora_de_string++;
 }

 printf("Numero de vezes que a palavra: <%s> aparece no arquivo: %d",  palavra, contadora_de_string);

 fclose(arquivo);

  return 0;
}
