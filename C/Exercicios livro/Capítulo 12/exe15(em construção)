15) Elabore um programa para calcular e exibir o número de vezes que cada letra ocorre dentro de um arquivo texto. Ignore as letras com acento. 
O usuário deverá informar o nome do arquivo.

#include <stdlib.h>
#include <stdio.h>
#include <string.h>

void verificarOcorrenciaCaractere(char caractere, FILE *arquivo){
  char vetor_letras[51] = {0}, string[200];
  int i, count_letra = 0;

  while(1){
    fgets(string, 200, arquivo);

    
    if(feof(arquivo))
      break;

      for (i = 0; i < strlen(string); i++){
        if (string[i] == caractere)
           count_letra++;
      }  

  }
  printf("%c = %d", caractere, count_letra);
}

int main(){
  char nome_arquivo[50];
  printf("Digite o nome do arquivo: ");
  scanf("%s", nome_arquivo); // arquivo_para_leitura.txt
  FILE *arquivo = fopen(nome_arquivo, "r");
  if (arquivo == NULL){
    perror("Erro: ");
    exit(1);
  }

  char caractere = fgetc(arquivo);
  while(caractere != EOF){
    if ((caractere >= 64 && caractere <= 90) || (caractere >= 97 && caractere <= 122))
       verificarOcorrenciaCaractere(caractere, arquivo);
    caractere = fgetc(arquivo);
  }
  fclose(arquivo);

  return 0;
}
