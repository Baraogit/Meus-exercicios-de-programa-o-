#include <stdlib.h>
#include <stdio.h>

void selectionSort(int *vetor, int n){
    int i, j, menor, trocaPosicao;

    for (i = 0; i < n - 1; i++){// 0 1 2 3 4
        menor = i; //premissa que o menor está na posição 0
        for (j = i + 1; j < n; j++){ // começa da posição 1
            if(vetor[j] < vetor[menor]) // se elemento na posição[1] for menor que elemento na posição[0]
                menor = j; // menor posição([0]) recebe a posição [1]
        }
        if (i != menor){ // se posição [0] for diferente da posição [1], ocorre a troca
            trocaPosicao = vetor[i]; //troca posição recebe elemento na posição [0]
            vetor[i] = vetor[menor]; // elemento na posição [0] recebe elemento na posição[1]
            vetor[menor] = trocaPosicao;
        }
    }

}

int main(){
    int vetor[5] = {5, 3, 2 , 4, 1};

    selectionSort(vetor, 5);

    for (int i = 0; i < 5; i++){
        printf("%d ", vetor[i]);
    }

  return 0;
}
