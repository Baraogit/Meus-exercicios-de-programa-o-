import java.util.Scanner;

import Entidades.Computador;
import Entidades.Jogador;
import Entidades.Tabuleiro;

public class Main {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		Tabuleiro tabuleiro = new Tabuleiro();
		Jogador jogador = new Jogador();
		Computador computador = new Computador();
		
		// escolha do nível de difculdade
		int nivelDificuldade;
		do {
			System.out.println("Escolha o nível de dificuldade: ");
			System.out.println("1 - Fácil");
			System.out.println("2 - Moderado");
			System.out.println("3 - Difícil");
			nivelDificuldade = input.nextInt();
			
			if(nivelDificuldade < 1 || nivelDificuldade > 3 ) {
				System.out.println("Você digitou a opção errada! Tente novamente.");
				continue;
			}
			
		}while(nivelDificuldade < 1 || nivelDificuldade > 3);
	
		
		//mostra as posições do tabuleiro
		System.out.println("Posições do tabuleiro: ");
		System.out.println("01 02 03\n04 05 06\n07 08 09");
		
		//jogo em si
		for(int i = 0; i < 9; i++) {
			System.out.print("Escolha a posição que você quer jogar: ");
			int posicao = input.nextInt();
			
			//sua vez
			boolean marcacao = jogador.jogar(posicao, tabuleiro.mesa);
			if(marcacao == false) {
				do {
					System.out.print("Posição já marcada, tente outra: ");
					posicao = input.nextInt();
					marcacao = jogador.jogar(posicao, tabuleiro.mesa);
				}while(marcacao == false);
			}
			
			//vez do computador dependendo do nível de dificuldade optada
			switch(nivelDificuldade) {
			case 1: 
				computador.jogar1(tabuleiro.mesa);
				break;
			case 2: 
				computador.jogar2(tabuleiro.mesa);
				break;
			case 3: 
				computador.jogar3(tabuleiro.mesa);
				break;
			}
	
		    //mostra a mesa nessa rodada
			tabuleiro.status();
			
		}

		input.close();
	}

}
