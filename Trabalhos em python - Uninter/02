def validarEntradaDados(string):
    while True:
        try:
            codigoProduto = int(input(string))
        except ValueError:
            print('Valor inválido. Digite novamente!!')
        else:
            if (codigoProduto < 10000) or (codigoProduto > 30000):
                print('Você digitou fora do intervalo. Digite novamente!!')
                continue
            else:
                return codigoProduto

#programa principal
codigoProduto = validarEntradaDados('Digite o código do produto no intervalo de 10000 à 30000 : ')

print(codigoProduto)



