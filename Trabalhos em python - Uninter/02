
def validarEntradaDados():
    while True:
        try:
            codigoProduto = int(input('Digite o código do produto no intervalo de 10000 à 30000 : '))
        except ValueError:
            print('Valor inválido. Digite novamente!!')
        else:
            if (codigoProduto < 10000) or (codigoProduto > 30000):
                print('Você digitou fora do intervalo. Digite novamente!!')
                continue
            else:
                return codigoProduto


def calcularDigitoVerificador(codigoProduto):
    armazenaDigitos = []
    for i in range(5):
        digito = codigoProduto % 10 #reserva um digito a cada loop na variavel
        armazenaDigitos.insert(i, digito)#esse digito é armazenado na lista
        codigoProduto //= 10 #
    armazenaDigitos.reverse() #reverte a lista

    digitoVerificador = 0
    peso = 2
    for i in range(5):
        digitoVerificador += (armazenaDigitos[i] * peso)
        peso += 1
    digitoVerificador //= 7
    return digitoVerificador



#programa principal
codigoProduto = validarEntradaDados()
print('Codigo produto - dígito = {}-{}'.format(codigoProduto, calcularDigitoVerificador(codigoProduto)))

