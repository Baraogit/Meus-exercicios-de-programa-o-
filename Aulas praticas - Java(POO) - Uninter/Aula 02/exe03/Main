package teste;

import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner input = new Scanner(System.in);
		
		Conta cliente;
			
	    System.out.print("Digite o número da conta: ");
	    int numeroConta = input.nextInt();
	    input.nextLine();
				   
	    System.out.print("Digite o seu nome: ");
		String nomeTitular = input.nextLine();
				   
		System.out.print("Deseja fazer um depósito inicial(s/n)? ");
		char escolha = input.nextLine().charAt(0);
	    if (escolha == 's') {
	    	System.out.print("Digite o valor do depósito inicial: ");
			float depositoInicial = input.nextFloat();
			cliente = new Conta(numeroConta, nomeTitular, depositoInicial);
			System.out.print("\n\n");
			cliente.status();
			System.out.print("\n\n");
		}else {
			cliente = new Conta(numeroConta, nomeTitular, 0.0f);
			System.out.print("\n\n");
			cliente.status();
			System.out.print("\n\n");
		}
			
	    int comando;
	    do {
	    	System.out.println("1 - Depositar");
	    	System.out.println("2 - Sacar");
	    	System.out.println("3 - Sair\n\n");
	    
	    	System.out.print("Digite um comando: ");
	    	comando = input.nextInt();
	    	
	    	switch(comando) {
	    	case 1: 
	    		System.out.print("Informe o valor do depósito: ");
	    	    float deposito = input.nextFloat();
	    		cliente.depositar(deposito); 
	    		System.out.print("\n\n");
	    		cliente.status();
	    		System.out.print("\n\n");
	    		break;
	    	case 2:
	    		System.out.print("Informe o valor do saque: ");
	    		float saque = input.nextFloat();
	    	    cliente.sacar(saque);
	    	    System.out.print("\n\n");
	    	    cliente.status();
	    	    System.out.print("\n\n");
	    	    break;
	    	case 3: 
	    		System.out.println("Você saiu do programa...");
	    		break;
	    	default: 
	    		System.out.println("Você digitou um comando erro! Tente novamente!\n\n");
	    		
	    	}
	    }while(comando != 3);
			   

		input.close();
	
	}// fim do método main
	
	
}// fim da classe Main


